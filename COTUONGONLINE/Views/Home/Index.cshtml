<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>


<div class="container">
    <div class="game-container">
        <div id="app">
            <div class="chessboard">
                <div v-for="item in chessNode"
                     class="chessnode"
                     :class="{ 'animated-piece': item.isMoving }"
                     v-on:dragstart="dragStart"
                     v-on:dragend="dragEnd"
                     :id="item.id"
                     v-bind:style="{ display: item.visible, top: item.top + 'px', left: item.left + 'px' }">
                    <img :src="'/' + item.src" class="chessimgnode" draggable="true" />
                </div>
            </div>
        </div>

        <div class="game-sidebar">
            <div class="room-controls">
                <button class="btn btn-primary" id="createRoom">Create Room</button>
                <input type="text" id="roomIdInput" class="form-control" placeholder="Enter Room ID">
                <div class="btn-group">
                    <button class="btn btn-success" id="joinRoom">Join Room</button>
                    <button class="btn btn-danger" id="leaveRoom">Leave Room</button>
                </div>
            </div>
            <div id="messages"></div>
            <div class="message-input">
                <input type="text" id="messageInput" class="form-control" placeholder="Enter your message">
                <button class="btn btn-primary" id="sendMessage">Send</button>
            </div>
        </div>
    </div>
</div>
